<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        /* Basic styles for form container */
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        .form-container {
            max-width: 400px;
            background-color: #fff;
            padding: 20px;
            margin: 50px auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #007BFF;
        }

        /* Styles for form fields */
        label {
            display: block;
            margin: 10px 0 5px;
            color: #555;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        /* Button styles */
        button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #216e88;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 10px;
        }

        button:hover {
            background-color: #216e88;
        }

        /* Styling for login/signup link */
        p {
            text-align: center;
            margin-top: 10px;
        }

        p a {
            color: #007BFF;
            text-decoration: none;
        }

        p a:hover {
            text-decoration: underline;
        }

        .close-btn {
            margin-left: 10px;
            text-align: left;
            font-size: 30px;
            /* color: #333; */
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
        }

        .close-btn:hover {
            color: red;
        }
    </style>
</head>

<body>
    <!-- Cross (X) button -->
    <button class="close-btn" onclick="goBack()">&#10006;</button>

    <div class="form-container">
        <!-- Login Form -->
        <div id="loginForm">
            <h1>Login</h1>
                     <!-- Check if error is present and display it -->
    <% if (error) { %>
        <div style="color: red; font-weight: bold;">
            <%= error %>
        </div>
    <% } %>
            <!-- Display the error message, if any -->
            <% if (error) { %>
                <div style="color: red; padding: 10px; border: 1px solid red; margin-bottom: 20px;">
                    <%= error %>
                </div>
                <% } %>
                    <form method="post" action="/login" id="collegeIDForm">
                        <label for="email">College ID:</label>
                        <input type="text" id="email" name="email" required>

                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" required>

                        <button type="submit">Login</button>
                    </form>
                    <!-- onclick="showSignup()" -->
                    <p>Don't have an account? <a href="/signUp">Sign up here</a></p>
        </div>
    </div>
    <script>
        function goBack() {
            // Go back to the previous page in the browser history
            window.history.back();
        }
        document.getElementById('collegeIDForm').addEventListener('submit', function(event) {
      const collegeID = document.getElementById('collegeID').value;
      const regex = /^\d{4}[a-zA-Z]{2}\d{2}[a-zA-Z]@sigce\.edu\.in$/;

      if (!regex.test(collegeID)) {
        alert('Invalid College ID format!');
        event.preventDefault();  // Prevent form submission
      }
    });
    </script>
</body>

</html>